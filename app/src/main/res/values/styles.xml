<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/accentColor</item>
    </style>

    <style name="WelcomeMessage">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="UserCard"/>
    <style name="UserCard.Name">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
    </style>

</resources>
