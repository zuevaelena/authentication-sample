<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
    </style>

    <style name="BottomMenuDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_menu</item>
    </style>

    <style name="BottomMenu" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomMenuDialog</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondaryColor</item>
    </style>

    <style name="WelcomeMessage">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="UserCard"/>
    <style name="UserCard.Name">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
    </style>

    <style name="ContentList" />

    <style name="ContentList.Item">
        <item name="android:background">@drawable/bg_content_list_news_item</item>
        <item name="android:paddingTop">@dimen/half_default_vertical_margin</item>
        <item name="android:paddingEnd">@dimen/half_default_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/half_default_vertical_margin</item>
        <item name="android:paddingStart">@dimen/half_default_horizontal_margin</item>
    </style>
    <style name="ContentList.Item.Land">
        <item name="android:minHeight">210dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="ContentList.Title">
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:paddingBottom">@dimen/half_default_vertical_margin</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
    </style>

    <style name="ContentList.Description">
        <item name="android:textAppearance">?textAppearanceListItem</item>
        <item name="android:lines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ContentList.Description.Land">
        <item name="android:lines">6</item>
    </style>

    <style name="ContentList.Date">
        <item name="android:textAppearance">?textAppearanceCaption</item>
        <item name="android:paddingTop">@dimen/half_default_vertical_margin</item>
    </style>

    <style name="ContentList.Photo">
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ContentList.Photo.Land">
        <item name="android:foreground">@drawable/fg_content_photo</item>
    </style>

</resources>
