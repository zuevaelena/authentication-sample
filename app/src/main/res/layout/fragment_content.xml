<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable name="user" type="dev.sample.authentication.entity.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.content.ui.ContentFragment">

        <TextView
            android:id="@+id/greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/user_card_margin"
            android:text="@string/hello_word"
            style="@style/WelcomeMessage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/user_photo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <ImageView
            android:id="@id/user_photo"
            android:layout_width="@dimen/user_photo_width"
            android:layout_height="@dimen/user_photo_width"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/greeting"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/user_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:id="@id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.name}"
            style="@style/UserCard.Name"
            app:layout_constraintTop_toBottomOf="@id/user_photo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/goto_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <Button
            android:id="@id/goto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goto_login"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/do_logout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:visibility="@{user.isLoggedIn ? View.GONE : View.VISIBLE}"/>
        <Button
            android:id="@id/do_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/do_logout"
            app:layout_constraintTop_toBottomOf="@id/goto_login"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:visibility="@{user.isLoggedIn ? View.VISIBLE : View.GONE}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
