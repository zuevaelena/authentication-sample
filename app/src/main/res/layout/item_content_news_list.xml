<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ContentList.Item"
    android:layout_marginTop="@dimen/default_vertical_margin"
    android:layout_marginEnd="@dimen/default_horizontal_margin"
    android:layout_marginStart="@dimen/default_horizontal_margin">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/ContentList.Title"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <TextView
        android:id="@id/description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/ContentList.Description"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toStartOf="@+id/photo"
        app:layout_constraintBottom_toTopOf="@+id/publish_date"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <TextView
        android:id="@id/publish_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/ContentList.Date"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintEnd_toEndOf="@id/description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/description"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <ImageView
        android:id="@id/photo"
        android:src="@drawable/ic_account_circle"
        android:layout_width="0dp"
        android:layout_height="@dimen/content_item_photo_height"
        style="@style/ContentList.Photo"
        app:layout_constraintTop_toTopOf="@id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/description"
        app:layout_constraintWidth_percent="0.4"/>

</androidx.constraintlayout.widget.ConstraintLayout>
